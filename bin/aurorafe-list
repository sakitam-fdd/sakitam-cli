#!/usr/bin/env node

const { log, fatal } = require('../src/logger');
const axios = require('axios');
const chalk = require('chalk');

/**
 * Padding.
 */
log();
process.on('exit', () => {
  log()
});

/**
 * List repos.
 */
axios({
  url: 'https://api.github.com/users/aurorafe/repos',
  headers: {
    'User-Agent': 'aurorafe-cli'
  }
}).then(res => {
  const requestBody = res.data;
  if (Array.isArray(requestBody)) {
    log('  Available official templates:');
    log();
    requestBody.forEach(repo => {
      if (/aurorafe-tpl/.test(repo.name)) {
        log(
          '  ' + chalk.yellow('â˜…') +
          '  ' + chalk.blue(repo.name) +
          ' - ' + chalk.green(repo.description))
      }
    })
  } else {
    console.error(requestBody.message)
  }
}).catch(error => {
  if (error) fatal(error.message)
});
